<section class="row">
  <section class="left col-md-5 col-md-offset-1">
  <h3>Burgers That Are Available!</h3>

  <ul class="list-group">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li class="list-group-item">
          <span class="names">
            {{this.burger_name}}
          </span>
          <span class="interact">
            <form  action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button class="btn btn-warning" type="submit">Devour!</button>
            </form>
          </span>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</section>
  <section class="right col-md-5 ">
  <h3>Burgers That Have Been Devoured!</h3>


  <ul class="list-group">
    {{#each burgers}}
      {{#if this.devoured}}
        <li class="list-group-item disabled">
          {{this.burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
  </section>
</section>
<section class="row">

  <form class="create-update-form col-md-4 col-md-offset-4" action="/" method="POST">
    <h3>Add a Burger</h3>
    <div class="bottom form-group">
      <label for="burger">Burger Name:</label><br>
      <input type="textarea" id="burger" name="name">
      <p><em>Please No Human Hybrids - It's ... Weird...</em></p>
    </div>

    <button class="btn btn-danger" type="submit">Add Burger</button>
  </form>
</section>